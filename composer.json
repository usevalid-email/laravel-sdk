{
    "name": "usevalid-email/laravel-sdk",
    "type": "library",
    "description": "Validate Your Emails with Confidence",
    "keywords": [
        "email",
        "validation",
        "sdk",
        "api",
        "usevalid.email"
    ],
    "homepage": "https://usevalid.email",
    "license": "MIT",
    "authors": [
        {
            "name": "Contact",
            "email": "contact@usevalid.email",
            "homepage": "https://usevalid.email"
        }
    ],
    "scripts": {
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage",
        "test:unit": "vendor/bin/pest --testsuite=unit",
        "format": "vendor/bin/pint",
        "analyse": "echo 'Checking dependencies...' && composer require --dev larastan/larastan && phpstan analyse"
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^8.12|^9.0|^10.0|^11.0",
        "illuminate/container": "^8.12|^9.0|^10.0|^11.0",
        "illuminate/contracts": "^8.12|^9.0|^10.0|^11.0",
        "usevalid-email/php-sdk": "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "laravel/pint": "^1.0",
        "phpunit/phpunit": "^9.4|^10.1|^11.5",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^6.23|^7.0|^8.0|^9.0|^10.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "UseValidEmail\\LaravelSdk\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "UseValidEmail\\LaravelSdk\\Tests\\": "tests/"
        },
        "files": [
            "tests/bootstrap.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        },
        "laravel": {
            "providers": [
                "UseValidEmail\\LaravelSdk\\Providers\\UseValidEmailServiceProvider"
            ],
            "config": {
                "usevalid-email": "config/usevalid-email.php"
            }
        }
    }
}